<?xml version="1.0" encoding="UTF-8"?>

<Defs>
   
   <HediffDef Name="addedPartAnimal" Abstract="True">
      <hediffClass>Hediff_AddedPart</hediffClass>
      <naturallyHealed>false</naturallyHealed>
      <defaultLabelColor>(148,117,14)</defaultLabelColor>
   </HediffDef>
   
   
   <!-- Added body parts -->
   
   <HediffDef ParentName="addedPartBionics">
      <defName>JawAnimal</defName>
      <label>animal jaw implant</label>
      <spawnThingOnRemoved>JawAnimal</spawnThingOnRemoved>
      <addedPartProps>
         <partEfficiency>1.0</partEfficiency>
      </addedPartProps>
      <stages>
		<li>
         <capMods>
            <li>
               <capacity>Talking</capacity>
               <offset>0.2</offset>
            </li>
			<li>
               <capacity>Eating</capacity>
               <offset>0.3</offset>
            </li>
         </capMods>
		</li>	 
      </stages>
   </HediffDef>
   
   
   <HediffDef ParentName="addedPartBionics">
      <defName>SpineAnimal</defName>
      <label>animal spine</label>
      <spawnThingOnRemoved>SpineAnimal</spawnThingOnRemoved>
      <addedPartProps>
         <partEfficiency>1.0</partEfficiency>
      </addedPartProps>
      <stages>
		<li>
         <capMods>
            <li>
               <capacity>Manipulation</capacity>
               <offset>0.1</offset>
            </li>
            <li>
               <capacity>Moving</capacity>
               <offset>0.1</offset>
            </li>
         </capMods>
		</li>	 
      </stages>
   </HediffDef>
   
   
   <HediffDef ParentName="addedPartBionics">
      <defName>EarAnimal</defName>
      <label>animal ear implant</label>
      <spawnThingOnRemoved>EarAnimal</spawnThingOnRemoved>
      <addedPartProps>
         <partEfficiency>1.0</partEfficiency>
      </addedPartProps>
      <stages>
		<li>
         <capMods>
            <li>
               <capacity>Hearing</capacity>
               <offset>0.1</offset>
            </li>
         </capMods>
		</li>	 
      </stages>
   </HediffDef>
   
</Defs>