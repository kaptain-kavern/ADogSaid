					</li>
				</verbs>
			</li>
		</comps>
		<spawnThingOnRemoved>BionicLegAnimal</spawnThingOnRemoved>
		<addedPartProps>
			<partEfficiency>1.0</partEfficiency>
			<isSolid>true</isSolid>
		</addedPartProps>
